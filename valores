algoritmo "semnome"
// Função :
// Autor :
// Data : 01/02/2023
// Seção de Declarações
var
opcao: literal
distancia, distancia1, volume, volume1: real
inicio

repita
   escreval("1000 quilômetros equivalem a quanto metros?")
   escreval("1 litro equivale a quantos metros cubicos?")
   escreval("Digite 3 para sair do programa")
   leia(opcao)
   limpatela
   se opcao = "1" entao
      escreval("tem certeza de que é este resultado?")
      escreval
      leia(distancia)
      escreval
      distancia1 <- distancia * 1000
      escreval("", distancia, " quilometro(s) equivale a ", distancia1, " metro(s)")
      distancia <- 0
      distancia1 <- 0
      escreval
   senao
      se opcao = "2" entao
         escreval("tem certeza desse resultado?")
         escreval
         leia(volume)
         escreval
         volume1 <- volume * 1000
         escreval("", volume, " metro(s) cúbico(s) equivale(m) a ", volume1, " litro(s)")
         volume <- 0
         volume1 <- 0
         escreval
      fimse
   fimse
ate opcao = "3"


fimalgoritmo
